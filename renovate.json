{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "docker": {
    "pinDigests": true
  },
  "regexManagers": [
    {
      "fileMatch": [
        "^renovated_images.txt$"
      ],
      "matchStrings": [
        "(?<depName>.*?):(?<currentValue>.*?)@?(?<currentDigest>sha256:[a-f0-9]+)?,.*"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
