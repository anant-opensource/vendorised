{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePresets": [
    ":prHourlyLimit2"
  ],
  "docker": {
    "pinDigests": true
  },
  "regexManagers": [
    {
      "fileMatch": [
        "^renovated_images.txt$"
      ],
      "matchStrings": [
        "(?<depName>.*?):(?<currentValue>.*?)@?(?<currentDigest>sha256:[a-f0-9]+)?,.*"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchFiles": ["renovated_images.txt"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "all non-major image updates",
      "groupSlug": "all-non-major"
    }
  ]
}